{
    "selects": {
        "job": {
            "sql": "SELECT * FROM `job` WHERE id = ?",
            "host": "master_host"
        },
        "jobs": {
            "sql": "SELECT * FROM `job`",
            "host": "master_host"
        },
        "job_artifact": {
            "sql": "SELECT * FROM `job_artifact` WHERE job_id = ?",
            "host": "master_host"
        },
        "job_log_urls": {
            "sql": "SELECT * FROM `job_log_url` WHERE job_id = ?",
            "host": "master_host"
        },
        "job_source": {
            "sql": "SELECT rev.commit_timestamp,
                           res.push_timestamp,
                           rev.comments,
                           rev.repository_id,
                           rev.revision
                FROM `revision` as rev
                LEFT JOIN `revision_map` as revmap
                    ON rev.id = revmap.revision_id
                LEFT JOIN `result_set` as res
                    ON revmap.result_set_id = res.id
                LEFT JOIN `job`
                    ON job.result_set_id = res.id
                WHERE job.id = ?
                ",
            "host": "master_host"
        },
        "row_by_guid": {
            "sql": "SELECT * FROM `job` WHERE `job_guid` = ?",
            "host": "master_host"
        },
        "resultset_by_rev_hash": {
            "sql": "SELECT * FROM `result_set` WHERE `revision_hash` = ?",
            "host": "master_host"
        },
        "revision_ids": {
            "sql": "SELECT `id`, `revision` FROM `revision`",
            "host": "master_host"
        },
        "revision_map": {
            "sql": "SELECT * FROM `revision_map`",
            "host": "master_host"
        },
        "result_set_ids": {
            "sql": "SELECT `id`, `revision_hash` FROM `result_set`",
            "host": "master_host"
        }
    },
    "updates": {
        "set_state_any":{

            "sql":"UPDATE `job`
                SET    `state` = ?
                WHERE  `id` = ?",

                "host":"master_host"
        },
        "set_jobs_submit_timestamp":{
            "sql":"UPDATE `job` SET `submit_timestamp` = ?",

            "host":"master_host"
        },
        "set_one_job_submit_timestamp":{
            "sql":"UPDATE `job` SET `submit_timestamp` = ? WHERE id = 1",

            "host":"master_host"
        }
    }
}
