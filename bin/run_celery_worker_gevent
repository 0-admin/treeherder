#!/bin/bash
curr_dir=$( dirname "${BASH_SOURCE[0]}" )
cd $( dirname $curr_dir)
source /etc/profile.d/treeherder.sh

if [[ ${NEW_RELIC_LICENSE_KEY+isset} = isset ]]; then
    NEWRELIC_ADMIN="newrelic-admin run-program"
fi

if [ -f ../venv/bin/python ]; then
    source ../venv/bin/activate
    PYTHON=../venv/bin/python
else
    PYTHON=python
fi

LOGFILE=/var/log/celery/celery_worker_gevent.log

if [ ! -f $LOGFILE ]; then
    touch $LOGFILE
fi

exec $NEWRELIC_ADMIN $PYTHON manage.py celery worker -Q log_parser_fail,log_parser -P gevent \
    --concurrency=10 --logfile=$LOGFILE -l INFO \
    --maxtasksperchild=500
